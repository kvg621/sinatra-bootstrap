<h1>Записаться</h1>
<form action="/visit" method="post">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="Имя">
  </div>
  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phone" type="text" class="form-control" placeholder="номер">
  </div>
  <div class="form-group">
    <label>Когда вас ждать</label>
    <input name="datetime" type="text" class="form-control" placeholder="время" id="aaa">
  </div>


  <div class="form-group">
    <label>Ваш парикмахер</label>
    <select name="spec" class="form-control">
      <option>Вася</option>
      <option>Анна</option>
      <option>Сергей</option>
      <option>Коля</option>
      <option>Наташа</option>
    </select>
  </div>
  <div class="form-group">
    <label>Ваш цвет</label>
    <select name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
    <script type="text/javascript">
      $('select[name="color"]').simplecolorpicker();
    $('select[name="colorpicker"]').simplecolorpicker({
      picker: true
    }).on('change', function() {
      $(document.body).css('background-color', $('select[name="colorpicker"]').val());
   });
    </script>

  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>
</form>

